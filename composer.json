{
    "name": "op/op-laravel-socialite-auth",
    "description": "Use socialite as a Laravel auth driver.",
    "keywords": [
        "op",
        "op-laravel-socialite-auth"
    ],
    "homepage": "https://github.com/OnePulse/op-laravel-socialite-auth",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Matthew Mueller",
            "email": "matthew@stechstudio.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "laravel/socialite": "^5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "STS\\SocialiteAuth\\": "src"
            }
    },
    "autoload-dev": {
        "psr-4": {
            "STS\\SocialiteAuth\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "STS\\SocialiteAuth\\SocialiteAuthServiceProvider"
            ],
            "aliases": {
                "SocialiteAuth": "STS\\SocialiteAuth\\Facades\\SocialiteAuth"
            }
        }
    }
}
